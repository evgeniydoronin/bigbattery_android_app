<!--
    Created by Evgenii Doronin
    LinkedIn: https://www.linkedin.com/in/evgeniydoronin
    
    Summary Tab Content - карточки с основными параметрами батареи
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Summary Tab Content - как на iOS скриншоте -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:padding="4dp">

        <!-- Max Voltage -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/voltage"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/max_voltage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- V"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max. Voltage"
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Min Voltage -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/voltage"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/min_voltage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- V"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Voltage"
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Voltage Diff -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/voltage"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/voltage_diff_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- V"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltage Dif."
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingBottom="8dp">

        <!-- Power -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/charging"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/power_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- W"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power"
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Internal Temperature -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/temperature"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/internal_temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- °F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Int. Temp."
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Average Voltage -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bb_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/voltage"
                    app:tint="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/avg_voltage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- V"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_on_surface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ave. Voltage"
                    android:textSize="12sp"
                    android:textColor="@color/colorInfoTitle"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
