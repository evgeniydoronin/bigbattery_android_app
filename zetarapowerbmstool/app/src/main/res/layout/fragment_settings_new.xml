<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_v2">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:paddingTop="40dp"
        android:background="@color/bb_surface"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:scaleType="centerInside"
            android:contentDescription="Big Battery Logo" />

    </LinearLayout>

    <!-- Connection Status Banner -->
    <LinearLayout
        android:id="@+id/connectionStatusBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/connection_status_connected"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/connectionStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_bluetooth_24"
            app:tint="@color/connection_connected_text" />

        <TextView
            android:id="@+id/connectionStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/connection_connected"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/connection_connected_text" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/connectionStatusBanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Protocol Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protocol Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bb_on_surface"
                android:layout_marginBottom="16dp" />

            <!-- Module ID Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/IdsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/bb_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Module ID"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMS module identifier"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/selectedId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bb_primary"
                        android:drawableEnd="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Module ID Status Label -->
            <TextView
                android:id="@+id/moduleIdStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/status_warning_text"
                android:visibility="gone" />

            <!-- CAN Protocol Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/CANContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_charging" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAN Protocol"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controller Area Network protocol"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/canId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_charging"
                        android:drawableEnd="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CAN Status Label -->
            <TextView
                android:id="@+id/canStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/status_warning_text"
                android:visibility="gone" />

            <!-- RS485 Protocol Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/RS485Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_protecting" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RS485 Protocol"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serial communication protocol"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/RS485Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_protecting"
                        android:drawableEnd="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- RS485 Status Label -->
            <TextView
                android:id="@+id/rs485StatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/status_warning_text"
                android:visibility="gone" />

            <!-- Information Banner -->
            <LinearLayout
                android:id="@+id/informationBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/info_banner_bg"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="@color/info_banner_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/settings_info_banner"
                    android:textSize="12sp"
                    android:textColor="@color/info_banner_text" />

            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="24dp"
                android:text="@string/save_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/save_button_bg"
                android:enabled="false" />

            <!-- App Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bb_on_surface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- App Version Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appSettingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/bb_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Version"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BigBattery Husky 2"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/versionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bb_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
