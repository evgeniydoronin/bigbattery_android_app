<?xml version="1.0" encoding="utf-8"?>
<!--
    Created by Evgenii Doronin
    LinkedIn: https://www.linkedin.com/in/evgeniydoronin
    
    Современный экран деталей с фокусом на температуры (Cell Voltage скрыт как в iOS)
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/bb_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_detail"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/bb_on_surface" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Temperature Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature Monitoring"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bb_on_surface"
                android:layout_marginBottom="16dp" />

            <!-- PCB Temperature Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/bb_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PCB Temperature"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main board temperature sensor"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pcb_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C/--℉"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/bb_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cell Temperature 1 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_charging" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cell Temperature 1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery cell sensor #1"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cell1_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C/--℉"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_charging" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cell Temperature 2 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_charging" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cell Temperature 2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery cell sensor #2"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cell2_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C/--℉"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_charging" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cell Temperature 3 Card (скрыта по умолчанию) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cell3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_charging" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cell Temperature 3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery cell sensor #3"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cell3_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C/--℉"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_charging" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cell Temperature 4 Card (скрыта по умолчанию) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cell4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/status_charging" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cell Temperature 4"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery cell sensor #4"
                            android:textSize="12sp"
                            android:textColor="@color/colorInfoTitle"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cell4_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C/--℉"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_charging" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Big Battery Logo (как в iOS внизу экрана) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big Battery"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery Management System"
                    android:textSize="14sp"
                    android:textColor="@color/colorInfoTitle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
