<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/bb_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <!-- Иконка температуры -->
        <ImageView
            android:id="@+id/temperature_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/temperature"
            app:tint="@color/bb_primary"
            android:scaleType="centerInside" />

        <!-- Название датчика -->
        <TextView
            android:id="@+id/sensor_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Temp. Sensor #1"
            android:textSize="14sp"
            android:textColor="@color/colorInfoTitle" />

        <!-- Значение температуры -->
        <TextView
            android:id="@+id/temperature_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75°F / 24°C"
            android:textSize="14sp"
            android:textColor="@color/bb_on_surface" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
