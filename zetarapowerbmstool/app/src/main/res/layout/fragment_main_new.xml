<?xml version="1.0" encoding="utf-8"?>
<!--
    Created by Evgenii Doronin
    LinkedIn: https://www.linkedin.com/in/evgeniydoronin
    
    Новый главный экран с современным дизайном Big Battery
    Включает табы Summary, Cell Voltage, Temperature
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_background">

    <!-- Header с логотипом Big Battery -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:paddingTop="40dp"
        android:background="@color/bb_surface"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Логотип Big Battery будет добавлен позже -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big Battery"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/bb_primary" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bluetooth Connection Panel -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bluetooth_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bb_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        android:background="@drawable/circle_bg"
                        android:padding="8dp"
                        app:tint="@color/bb_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bluetooth_device_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to Connect"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <TextView
                            android:id="@+id/device_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Not Connected"
                            android:textSize="14sp"
                            android:textColor="@color/colorInfoTitle" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_enter"
                        app:tint="@color/bb_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Battery Progress Circle -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_bg">

                    <!-- Изображение батареи в центре -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/battery_bg"
                        android:scaleType="centerInside" />

                    <!-- Круговая диаграмма -->
                    <at.grabner.circleprogress.CircleProgressView
                        android:id="@+id/circleView"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cpv_barColor="@color/bb_primary"
                        app:cpv_barWidth="8dp"
                        app:cpv_innerContourSize="0dp"
                        app:cpv_maxValue="100"
                        app:cpv_outerContourSize="0dp"
                        app:cpv_rimColor="@color/battery_background"
                        app:cpv_rimWidth="8dp"
                        app:cpv_spinColor="@color/bb_on_surface"
                        app:cpv_textColor="@color/bb_on_surface"
                        app:cpv_autoTextSize="false"
                        app:cpv_textSize="0dp"
                        app:cpv_showUnit="false"
                        app:cpv_value="0" />

                    <!-- Иконка зарядки -->
                    <ImageView
                        android:id="@+id/charging_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/charging"
                        android:visibility="gone"
                        app:tint="@color/status_charging" />

                </FrameLayout>

                <!-- Процент заряда под кругом -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:background="@color/status_protecting"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="@color/bb_surface" />

                    <TextView
                        android:id="@+id/battery_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/bb_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="16sp"
                        android:textColor="@color/bb_surface" />

                </LinearLayout>

            </FrameLayout>

            <!-- Parameters Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:padding="8dp"
                android:paddingBottom="12dp">

                <!-- Voltage Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/bb_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- V"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/voltage"
                                app:tint="@color/bb_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Total Voltage"
                                android:textSize="12sp"
                                android:textColor="@color/colorInfoTitle" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/voltageValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Current Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_marginHorizontal="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/bb_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/current"
                                app:tint="@color/bb_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Total Current"
                                android:textSize="12sp"
                                android:textColor="@color/colorInfoTitle" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/currentValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Temperature Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/bb_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- °F/-- °C"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/temperature"
                                app:tint="@color/bb_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Total Temp."
                                android:textSize="12sp"
                                android:textColor="@color/colorInfoTitle" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/bb_on_surface"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tab_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/bb_surface"
                    android:background="@color/bb_primary"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tab_cell_voltage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cell Voltage"
                    android:textSize="16sp"
                    android:textColor="@color/bb_on_surface"
                    android:background="@color/bb_surface"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:id="@+id/tab_temperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temperature"
                    android:textSize="16sp"
                    android:textColor="@color/bb_on_surface"
                    android:background="@color/bb_surface"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Tab Content Container -->
            <FrameLayout
                android:id="@+id/tab_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

                <!-- Summary Tab Content (по умолчанию видимый) -->
                <include
                    android:id="@+id/summary_tab_content"
                    layout="@layout/tab_summary_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Cell Voltage Tab Content (скрыт) -->
                <include
                    android:id="@+id/cell_voltage_tab_content"
                    layout="@layout/tab_cell_voltage_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Temperature Tab Content (скрыт) -->
                <include
                    android:id="@+id/temperature_tab_content"
                    layout="@layout/tab_temperature_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
