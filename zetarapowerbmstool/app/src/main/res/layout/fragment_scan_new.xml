<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_background"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/bb_surface">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bluetooth Devices"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/bb_on_surface" />

        <ImageView
            android:id="@+id/img_loading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/scan_loading"
            app:tint="@color/bb_primary"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Scan Button Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/bb_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Discovery"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bb_on_surface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to scan for nearby BMS devices"
                android:textSize="14sp"
                android:textColor="@color/colorInfoTitle"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/btn_scan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/bb_primary"
                android:text="@string/start_scan"
                android:textColor="@color/bb_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Devices List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Available Devices"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bb_on_surface" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_bluetooth_24"
            app:tint="@color/bb_primary" />

    </LinearLayout>

    <!-- Devices RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scanDeviceListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false" />

    <!-- Empty State (когда нет устройств) -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_baseline_bluetooth_24"
            app:tint="@color/colorInfoTitle"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No devices found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/bb_on_surface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make sure your BMS device is powered on and nearby"
            android:textSize="14sp"
            android:textColor="@color/colorInfoTitle"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
